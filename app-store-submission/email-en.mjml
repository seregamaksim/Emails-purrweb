      <mj-title>App Store submission: 9 hidden hazards.</mj-title>
      <mj-class name="title" font-size="14px" line-height="30px" font-weight="bold"></mj-class>
      <mj-class name="text" font-size="14px" line-height="18px" padding-bottom="8px"></mj-class>
      <mj-class name="text-section" padding="0" padding-bottom="20px" background-color="#fff" />
      <mj-class name="info-text" font-size="12px" line-height="24px" color="#797979" />
